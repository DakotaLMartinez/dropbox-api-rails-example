<h1>Snippets</h1>

<div class="snippets">
  <% files = dropbox.ls %>
  <% if files.empty? %>
    No photos
  <% else %>
    <% dropbox.ls.each do |file| %>
      <%= file %>
    <% end %>
  <% end %>
</div>
<%= form_tag('/dropbox/snippets') %>
  <div>
    <label for="name">Name: </label>
    <input type="text" name="snippet[name]" />
  </div>
  <div>
    <textarea name="snippet[body]" id="" cols="30" rows="10"></textarea>
  </div>
  
  <input type="submit" value="submit" />
</form>